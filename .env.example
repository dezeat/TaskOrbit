# Postgres superuser database and credentials
POSTGRES_DB=taskorbit
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Password for the application DB user; required by init SQL
DB_APP_PASSWORD=

# Application DB username and schema
DB_APP_USER=taskorbit_dbuser
DB_SCHEMA=taskorbit

# Optional: the logical DB name the app connects to (usually same as POSTGRES_DB)
DB_NAME=taskorbit

# The app reads DB_USER/DB_PASS (mapped from DB_APP_USER/DB_APP_PASSWORD in compose)
# You can set DB_USER/DB_PASS directly if you run the app outside compose
# DB_USER=taskorbit_dbuser
# DB_PASS=

# App runtime settings
FLASK_SECRET=
HOST_PORT=8080

# DB connection details used by the app
DB_TYPE=postgresql
DB_HOST=db
DB_PORT=5432

# Optional: override image or other compose behavior via environment
# COMPOSE_HTTP_TIMEOUT=200
