# Template .env for TaskOrbit — copy to .env and fill in values

# Flask configuration
# SECRET key used by Flask to sign sessions. Use a long random value in production.
FLASK_SECRET=changeme_replace_with_secure_random
# Host and port for local development
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
# Enable debug (1/0) — default 1 for development
FLASK_DEBUG=1

# Database configuration
# DB_TYPE: sqlite | postgresql | mysql
DB_TYPE=sqlite

# For sqlite, set DB_HOST to a path and DB_NAME to filename
DB_HOST=/path/to/db/folder
DB_NAME=taskorbit.sqlite

# For server DBs, set these values instead
#DB_TYPE=postgresql
#DB_HOST=localhost
#DB_NAME=taskorbit_db
#DB_USER=taskorbit
#DB_PW=change_me
#DB_PORT=5432
#DB_DRIVER=psycopg
#DB_DIALECT=postgresql
# Set SQLAlchemy echo to true to debug SQL (true/false)
DB_ECHO=false

